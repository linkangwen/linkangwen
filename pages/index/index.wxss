.selection{
  border-bottom: 5px solid #ddd;
}
.item_image image{
 display: block;
 margin: 0 auto;
}
.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}
.text-all{
  color: green;
  font-size: 10px;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.content-item{
  height: 250rpx;
  width: 49%;
  margin: 0.5%;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item-text{
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0));
  height: 125rpx;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 0 1% 1% 1%; 
}
.list-item{
  height: 500rpx;
  width: 100%;
}
.list-item-images{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.list-item-images-image{
  width: 100%;
  height: 100%;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
}
.list-text{
  height: 200rpx;
  width: 100%;
}
.list-text{
  height: 200rpx;
  width: 98%;
   margin-top: 20rpx;
   padding: 0  1% ;

}
.list-content{
  font-size:10px;
  color: #999;
  margin-top: 20rpx;
}
